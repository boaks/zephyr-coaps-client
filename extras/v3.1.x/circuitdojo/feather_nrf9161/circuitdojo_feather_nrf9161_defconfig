# Enable MPU
CONFIG_ARM_MPU=y

# Hardware stack protection
CONFIG_HW_STACK_PROTECTION=y

# Enable TrustZone-M
CONFIG_ARM_TRUSTZONE_M=y

# Enable GPIO
CONFIG_GPIO=y

# Enable uart driver
CONFIG_SERIAL=y

# Enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable pincontrol
CONFIG_PINCTRL=y

# Disable entropy driver, as it's not yet implemented
CONFIG_ENTROPY_NRF5_RNG=n
